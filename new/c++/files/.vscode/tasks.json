{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "windows": {
                "command": "C:/msys64/usr/bin/bash.exe",
                "args": [ "--login", "~/.splashkit/skm", "clang++", "-g", "*.cpp", "-o", "${workspaceRootFolderName}" ],
                "options": {
                    "env": {
                        "MSYSTEM": "MINGW64",
                        "MSYS2_PATH_TYPE": "inherit",
                        "CHERE_INVOKING": "enabled_from_arguments",
                        "PATH": "${env:PATH};/home/${env:UserName}/.splashkit"
                    }
                }
            },
            "osx": {
                "command": "skm",
                "args": [ "clang++", "-g", "*.cpp", "-o", "${workspaceRootFolderName}" ],
                "options": {
                    "env": {
                        "PATH": "${env:HOME}/.splashkit:${env:PATH}"
                    }
                }
            },
            "linux": {
                "command": "skm",
                "args": [ "clang++", "-g", "*.cpp", "-o", "${workspaceRootFolderName}" ],
                "options": {
                    "env": {
                        "PATH": "${env:HOME}/.splashkit:${env:PATH}"
                    }
                }
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ],
}
